<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Permiso para el modelo Empresa -->
        <record model="ir.model.access" id="access_empresa_admin">
            <field name="name">access_empresa_admin</field>
            <field name="model_id" ref="proyecto_modulo_jonathan.model_proyecto_modulo_jonathan_empresa"/>
            <field name="group_id" ref="proyecto_modulo_jonathan.group_administrador"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <!-- No tendria sentido que un tutor pudiese crear y/o editar empresas
             entonces le quitamos los permisos de crear y escribir-->
        <record model="ir.model.access" id="access_empresa_tutor">
            <field name="name">access_empresa_tutor</field>
            <field name="model_id" ref="proyecto_modulo_jonathan.model_proyecto_modulo_jonathan_empresa"/>
            <field name="group_id" ref="proyecto_modulo_jonathan.group_tutor"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
