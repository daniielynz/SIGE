<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Permiso para el modelo Alumnado -->
        <record model="ir.model.access" id="access_alumnado_admin">
            <field name="name">access_alumnado_admin</field>
            <field name="model_id" ref="proyecto_modulo_jonathan.model_proyecto_modulo_jonathan_alumnado"/>
            <field name="group_id" ref="proyecto_modulo_jonathan.group_administrador"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_alumnado_tutor">
            <field name="name">access_alumnado_tutor</field>
            <field name="model_id" ref="proyecto_modulo_jonathan.model_proyecto_modulo_jonathan_alumnado"/>
            <field name="group_id" ref="proyecto_modulo_jonathan.group_tutor"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <!-- No tendria mucho sentido que un estudiante pudiese entrar a ver al resto
             y mucho menos editarlos o crear uno nuevo, podemos darle permisos solamente
             de lectura-->
        <record model="ir.model.access" id="access_alumnado_alumno">
            <field name="name">access_alumnado_estudiante</field>
            <field name="model_id" ref="proyecto_modulo_jonathan.model_proyecto_modulo_jonathan_alumnado"/>
            <field name="group_id" ref="proyecto_modulo_jonathan.group_estudiante"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
